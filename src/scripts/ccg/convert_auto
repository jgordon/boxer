#!/bin/bash

cat $@ | \
sed 's/(<[LT]/"&/g;
     s/ )/")/g;
     s/>)/>")/g;
     s/^"(<[LT]/###&/;
     s/$/"/' | \
grep -v '^ID=' | \
tr '"' '\n' | \
sed 's/(<L \([^ ]*\) \([^ ]*\) [^ ]* \([^ ]*\) [^ ]*>/(<L *** \1 \2 \3>/;
     s/(<T \([^ ]*\) \([01]\) \([1 2]\)>/(<T *** \1 * \2 \3>/;
     s/ *$//'
